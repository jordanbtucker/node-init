{
  "name": "node-init",
  "version": "0.1.0",
  "description": "Starting point for Node.js projects",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "coverage": "run-s -c tap tap-coverage",
    "eslint": "eslint --fix .",
    "prettier": "prettier --loglevel warn --write **/*.{json,md,yml}",
    "lint": "run-s eslint prettier",
    "preversion": "npm test",
    "start": "node lib",
    "tap": "tap test -R spec",
    "tap-coverage": "tap --coverage-report html",
    "test": "run-s lint tap"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordanbtucker/node-init.git"
  },
  "author": "Jordan Tucker <jordanbtucker@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jordanbtucker/node-init/issues"
  },
  "homepage": "https://github.com/jordanbtucker/node-init#readme",
  "dependencies": {
    "dotenv": "^7.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "sinon": "^7.3.2",
    "tap": "^13.0.1"
  }
}
