{
  "name": "node-init",
  "version": "0.0.0",
  "description": "Starting point for Node.js projects",
  "private": true,
  "main": "lib",
  "files": [
    "lib"
  ],
  "engines": {
    "node": "^10.9 || ^12 || >=14"
  },
  "scripts": {
    "coverage": "run-s -c tap tap-coverage",
    "eslint": "eslint --fix .",
    "lint": "run-s eslint prettier",
    "prettier": "prettier --loglevel warn --write **/*.{babelrc,css,html,js,json,jsx,md,scss,ts,tsx,yml}",
    "preversion": "npm test",
    "start": "node lib",
    "tap": "tap test -R spec",
    "tap-coverage": "tap --coverage-report html",
    "test": "run-s lint tap"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "sinon": "^9.0.3",
    "tap": "^14.10.8"
  }
}
