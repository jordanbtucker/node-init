{
  "name": "node-init",
  "version": "0.0.0",
  "description": "Starting point for Node.js projects",
  "private": true,
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=8.12.0"
  },
  "scripts": {
    "coverage": "run-s -c tap tap-coverage",
    "eslint": "eslint --fix .",
    "lint": "run-s eslint prettier",
    "prettier": "prettier --loglevel warn --write **/*.{js,json,md,yml}",
    "preversion": "npm test",
    "start": "node lib",
    "tap": "tap test -R spec",
    "tap-coverage": "tap --coverage-report html",
    "test": "run-s lint tap"
  },
  "dependencies": {
    "dotenv": "^8.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "cross-env": "^5.2.1",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^2.7.0",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "sinon": "^7.4.2",
    "tap": "^14.6.1"
  }
}
