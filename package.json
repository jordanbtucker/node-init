{
  "name": "node-init",
  "version": "0.0.0",
  "description": "Starting point for Node.js projects",
  "private": true,
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "coverage": "run-s -c tap tap-coverage",
    "eslint": "eslint --fix .",
    "lint": "run-s eslint prettier",
    "prettier": "prettier --loglevel warn --write **/*.{js,json,md,yml}",
    "preversion": "npm test",
    "start": "node lib",
    "tap": "tap test -R spec",
    "tap-coverage": "tap --coverage-report html",
    "test": "run-s lint tap"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "sinon": "^9.0.1",
    "tap": "^14.10.7"
  }
}
